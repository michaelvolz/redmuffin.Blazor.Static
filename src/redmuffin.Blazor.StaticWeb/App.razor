<ErrorBoundary @ref="ComponentErrorBoundary">
    <ChildContent>

        <Router AppAssembly="@typeof(App).Assembly" OnNavigateAsync="HandleNavigationAsync">
            <Found Context="routeData">
                <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
                <FocusOnNavigate RouteData="@routeData" Selector="h1" />
            </Found>
            <NotFound>
                <PageTitle>Not found</PageTitle>
                <LayoutView Layout="@typeof(MainLayout)">
                    <p role="alert">Sorry, there's nothing at this address.</p>
                </LayoutView>
            </NotFound>
        </Router>

    </ChildContent>
    <ErrorContent Context="errorException">

        <div class="blazor-error-boundary">
            <pre>Boom! @errorException.ToString()</pre>
            <button @onclick="_ => ComponentErrorBoundary.Recover()">Continue</button>
            <a href="http://redmuffin.de" class="reload">Reload</a>
        </div>

    </ErrorContent>
</ErrorBoundary>